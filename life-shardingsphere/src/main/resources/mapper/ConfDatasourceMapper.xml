<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.authorization.life.shardingsphere.infra.mapper.ConfDatasourceMapper">

    <resultMap id="confdatasourceMap" type="com.authorization.life.shardingsphere.infra.entity.ConfDatasource">
        <id column="id" property="id"/>
        <result column="datasource_name" property="datasourceName"/>
        <result column="database_name" property="databaseName"/>
        <result column="database_ip" property="databaseIp"/>
        <result column="database_port" property="databasePort"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="url" property="url"/>
        <result column="create_date" property="createDate"/>
        <result column="update_date" property="updateDate"/>
        <result column="del_flag" property="delFlag"/>
    </resultMap>


    <sql id="conf_datasource_column">
        ${prefix}id,
        ${prefix}datasource_name,
        ${prefix}database_name,
        ${prefix}database_ip,
        ${prefix}database_port,
        ${prefix}username,
        ${prefix}password,
        ${prefix}url,
        ${prefix}create_date,
        ${prefix}update_date,
        ${prefix}del_flag
    </sql>

    <select id="page" resultType="com.authorization.life.shardingsphere.infra.entity.ConfDatasource">
        SELECT
        <include refid="conf_datasource_column">
            <property name="prefix" value="t1."/>
        </include>
        FROM conf_datasource t1
    </select>

</mapper>
